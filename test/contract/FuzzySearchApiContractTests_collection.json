  "item": [
    {
      "name": "Login with incorrect credentials",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code to not return 200\", function() {",
              "  pm.response.to.not.have.status(200);",
              "});",
              "",
              "pm.test(\"Status code to have 401\", function() {",
              "  pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test(\"No token is returned\", function() {",
              "    pm.response.to.have.body(\"401 - Unauthorised\")",
              "});"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let email = 'admin@nhs.net';",
              "pm.environment.set('adminUser', email);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "protocolProfileBehavior": {
        "disabledSystemHeaders": {
          "content-type": true
        }
      },
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json;charset=UTF-8",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"emailAddress\": \"{{adminUser}}\",\n    \"password\": \"incorrect\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "https://{{authHost}}:9025/authentication/login",
          "protocol": "https",
          "host": [
            "{{authHost}}"
          ],
          "port": "9025",
          "path": [
            "authentication",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Login as a user",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = JSON.parse(responseBody);",
              "",
              "pm.test(\"Login test\", function() {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Save access_token as an environment variable\", function() {",
              "    postman.setEnvironmentVariable(\"accessToken\", jsonData.accessToken);",
              "});",
              "",
              "pm.test(\"Save refresh_token as an environment variable\", function() {",
              "    postman.setEnvironmentVariable(\"refreshToken\", jsonData.refreshToken);",
              "});"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let email = 'admin@nhs.net';",
