	"item": [
		{
			"name": "Login with incorrect credentials",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code to not return 200\", function() {",
							"  pm.response.to.not.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code to have 401\", function() {",
							"  pm.response.to.have.status(401);",
							"});",
							"",
							"pm.test(\"No token is returned\", function() {",
							"    pm.response.to.have.body(\"401 - Unauthorised\")",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let email = 'admin@nhs.net';",
							"pm.environment.set('adminUser', email);"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json;charset=UTF-8",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"emailAddress\": \"{{adminUser}}\",\n    \"password\": \"incorrect\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://{{host}}:8443/authentication/login",
					"protocol": "https",
					"host": [
						"{{host}}"
					],
					"port": "8443",
					"path": [
						"authentication",
						"login"
					]
				}
			},
			"response": []
		},
		{
